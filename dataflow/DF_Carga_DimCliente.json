{
	"name": "DF_Carga_DimCliente",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_Source_Clientes",
						"type": "DatasetReference"
					},
					"name": "source1"
				},
				{
					"dataset": {
						"referenceName": "DS_Source_Clientes_BD_GEN",
						"type": "DatasetReference"
					},
					"name": "source2"
				},
				{
					"dataset": {
						"referenceName": "DS_Source_Clientes_Location",
						"type": "DatasetReference"
					},
					"name": "source3"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_Sink_Dim_Cliente",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "derivedColumn2"
				},
				{
					"name": "derivedColumn3"
				},
				{
					"name": "join1"
				},
				{
					"name": "join2"
				},
				{
					"name": "derivedColumn4"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          cst_id as short,",
				"          cst_key as string,",
				"          cst_firstname as string,",
				"          cst_lastname as string,",
				"          cst_marital_status as string,",
				"          cst_gndr as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source(output(",
				"          CID as string,",
				"          BDATE as date,",
				"          GEN as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source2",
				"source(output(",
				"          CID as string,",
				"          CNTRY as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source3",
				"source1 derive(ClienteKey_Limpia = toString(trim(cst_key))) ~> derivedColumn1",
				"source2 derive(ClienteKey_Limpia_2 = toString(replace(trim(CID), 'NASAW000', 'AW000'))) ~> derivedColumn2",
				"source3 derive(ClienteKey_Limpia_3 = toString(replace(trim(CID), '-', ''))) ~> derivedColumn3",
				"derivedColumn1, derivedColumn2 join(cst_key == ClienteKey_Limpia_2,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1, derivedColumn3 join(cst_key == ClienteKey_Limpia_3,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join2",
				"join2 derive(Genero_Key = iif(cst_gndr == 'M', 1, iif(cst_gndr == 'F', 0, toInteger(null()))),",
				"          ClienteKey_Final = toInteger(substring(ClienteKey_Limpia, 6, 100))) ~> derivedColumn4",
				"derivedColumn4 select(mapColumn(",
				"          cst_id,",
				"          PrimerNombre = cst_firstname,",
				"          Apellido = cst_lastname,",
				"          EstadoCivil = cst_marital_status,",
				"          cst_key = ClienteKey_Limpia,",
				"          ClienteFechaNacimiento = BDATE,",
				"          Pais = CNTRY,",
				"          Genero = Genero_Key,",
				"          ClienteKey = ClienteKey_Final",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          ClienteKey as integer,",
				"          cst_key as string,",
				"          PrimerNombre as string,",
				"          Apellido as string,",
				"          EstadoCivil as string,",
				"          Genero as string,",
				"          FechaNacimiento as date,",
				"          Pais as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> sink1"
			]
		}
	}
}